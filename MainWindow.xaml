<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:T6TC_NEW" xmlns:Controls="clr-namespace:ColorWheel.Controls;assembly=ColorWheel.Controls"
    x:Class="T6TC.MainWindow"
        mc:Ignorable="d"
        Title="T6 Texture Changer" Height="321.5" Width="460.84" Style="{DynamicResource WindowStyle}" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Window.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome 
        CaptionHeight="0"
        ResizeBorderThickness="3"
        UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="EntireGrid">

        <TabControl x:Name="AllPages" Margin="0,8,0,0" SelectionChanged="TabControl_SelectionChanged" SelectedIndex="5">

            <TabItem x:Name="Home" Header="HOME" FontSize="16" Margin="4,0,-4,0">

                <Grid x:Name="HomeGridA" Height="303" VerticalAlignment="Top" Margin="-2,0,-1,0">
                    <Image HorizontalAlignment="Left" Height="198" Margin="-8,72,0,0" VerticalAlignment="Top" Width="451" Source="Light-Blue-Gradient-Background-Graphics-3899476-1-1-580x387.jpg" Stretch="Fill" Opacity="0.2" Visibility="Hidden">
                        <Image.Effect>
                            <BlurEffect Radius="150" KernelType="Box" RenderingBias="Quality"/>
                        </Image.Effect>
                    </Image>
                    <Grid x:Name="LoginGrid" Visibility="Hidden">
                        <TextBox x:Name="LoginBox" Grid.ColumnSpan="1" HorizontalAlignment="Left" Height="22" Margin="13,16,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" Width="433" BorderBrush="#FF3C4447" Background="#00FF0000" CaretBrush="White" Foreground="#FF696B6C" GotFocus="LoginBox_GotFocus"/>
                        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="13,43,0,0" VerticalAlignment="Top" Width="433" Height="29" Background="#FF1E1E1E" Foreground="{DynamicResource DefaultColor}" FontSize="12" Click="LoginButton_Click" BorderBrush="#FFDA0037" FontFamily="Segoe UI"/>
                        <Label Content="Still have not registered?" HorizontalAlignment="Left" Margin="13,78,0,0" VerticalAlignment="Top" Foreground="Gray"/>
                        <Label x:Name="GetID" Content="Get ID Now!" HorizontalAlignment="Left" Margin="159,78,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.314,0.164" FontWeight="Bold" Cursor="Hand" MouseDown="GetID_MouseDown" MouseLeftButtonDown="GetID_MouseLeftButtonDown" ToolTip="Get your login ID" Foreground="{DynamicResource DefaultColor}"/>
                        <Separator HorizontalAlignment="Left" Height="25" Margin="0,93,-8,0" VerticalAlignment="Top" Width="464" Foreground="{DynamicResource DefaultColor}" Background="{DynamicResource DefaultColor}" FontSize="18"/>
                        <TextBox x:Name="EnterName" Grid.ColumnSpan="1" HorizontalAlignment="Left" Height="22" Margin="13,117,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="433" BorderBrush="#FF3C4447" Background="#00FF0000" CaretBrush="White" Foreground="#FF696B6C" GotFocus="EnterName_GotFocus" TextChanged="EnterName_TextChanged" Text="Enter a name"/>
                        <Label x:Name="ID" Content="Your ID is:" HorizontalAlignment="Left" Margin="13,143,0,0" VerticalAlignment="Top" Foreground="Gray"/>
                        <TextBox x:Name="ID1" Text="" HorizontalAlignment="Left" Margin="73,144,0,0" VerticalAlignment="Top" Focusable="True" BorderBrush="{x:Null}" Grid.ColumnSpan="1" Background="{x:Null}" RenderTransformOrigin="0.528,0.43"/>
                    </Grid>
                    <Grid x:Name="HomeGrid">

                        <Button x:Name="ReloadBO2" Content="RELOAD BO2" Margin="120,59,121,204" FontFamily="Segoe UI Semibold" Background="#0CC1C1C1" Click="ReloadBO2_Click"/>
                        <Button x:Name="Direc" Content="DIRECTORY" Margin="120,104,231,168" FontFamily="Segoe UI Semibold" Background="#0CC1C1C1" Click="Direc_Click"/>
                        <Button x:Name="RestoreAll" Content="RESTORE ALL" Margin="120,140,164,123" FontFamily="Segoe UI Semibold" Background="#0CC1C1C1" Click="RestoreAll_Click"/>
                        <Button x:Name="ReloadTool" Content="RELOAD" Margin="230,104,121,168" FontFamily="Segoe UI Semibold" Background="#0CC1C1C1" Click="ReloadTool_Click"/>
                        <Button Content="" Margin="296,140,122,123" FontFamily="Segoe UI Semibold" Background="#0CC1C1C1" IsEnabled="False"/>
                        <Canvas Width="24" Height="24" Margin="306,153,126,126" IsEnabled="False">
                            <Path Fill="{DynamicResource DefaultColor}" Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" Stretch="Fill" Width="20" Height="21.333" Canvas.Top="-2.667" />
                        </Canvas>
                        <Image HorizontalAlignment="Left" Height="34" Margin="425,219,0,0" VerticalAlignment="Top" Width="31" Source="se.png"/>
                    </Grid>
                    <Label x:Name="vers" Content="v0.9.8" HorizontalAlignment="Left" Margin="299,183,0,0" VerticalAlignment="Top" Foreground="#FF4F4F4F" FontSize="14" MouseDown="vers_MouseDown" IsEnabled="False" />


                </Grid>
            </TabItem>
            <TabItem x:Name="Skybox" Header="SKYBOX" FontSize="16" Margin="4,0,-4,0">
                <Grid x:Name="SkyGrid" Height="303" VerticalAlignment="Top" Margin="0,0,-3,0">
                    <Button x:Name="ImportSky" Content="Import Skybox" Margin="3,7,7,0" VerticalAlignment="Top" Height="33" FontSize="14" Click="ImportSky_Click" Background="{DynamicResource DefaultColor}" Foreground="Black"/>
                    <Button x:Name="RestoreSky" Content="Reset Skybox" Margin="3,45,7,0" VerticalAlignment="Top" Height="33" FontSize="14" Click="RestoreSky_Click" Background="{DynamicResource DefaultColor}" Foreground="Black"/>
                    <Button x:Name="PresetSkies" Content="Preset Skyboxes" Margin="3,83,7,0" VerticalAlignment="Top" Height="33" FontSize="14" Click="ImportSky_Click" Background="{DynamicResource DefaultColor}" Foreground="Black" IsEnabled="False"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="HQTex" Header="HQ TEX" FontSize="16" Margin="4,0,-4,0">
                <Grid x:Name="TexGrid" Height="303" VerticalAlignment="Top" Margin="0,0,-3,0">
                    <Button x:Name="Enable4K" Content="Enable 4K Textures" Margin="3,8,7,0" VerticalAlignment="Top" Height="33" FontSize="14" Click="Enable4K_Click_1" Background="{DynamicResource DefaultColor}" Foreground="Black"/>
                    <Button x:Name="EnableWinter" Content="Enable Winter Textures" Margin="3,46,7,0" VerticalAlignment="Top" Height="33" FontSize="14" Click="EnableWinter_Click_1" Background="{DynamicResource DefaultColor}" Foreground="Black"/>
                    <Button x:Name="RestoreTex" Content="Restore Default" Margin="3,84,7,0" VerticalAlignment="Top" Height="33" FontSize="14" Click="RestoreTex_Click" Background="{DynamicResource DefaultColor}" Foreground="Black"/>
                    <ProgressBar x:Name="ExtractProgress" Margin="3,138,7,140"/>
                    <Label x:Name="StatusLabel" Content="" HorizontalAlignment="Left" Margin="3,119,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Tritium" Header="TRITIUM" FontSize="16" Margin="4,0,-4,0">
                <Grid x:Name="TritGrid" Height="303" VerticalAlignment="Top" Margin="0,0,-3,0">
                    <Controls:ColorWheelControl x:Name="styleColorWheel" HorizontalAlignment="Left" Height="270" Margin="66,14,0,0" VerticalAlignment="Top" Width="280" Palette="{Binding Palette, Mode=OneWay}" ColorsUpdated="styleColorWheel_ColorsUpdated"/>
                    <TextBox x:Name="hexcode" Grid.ColumnSpan="1" HorizontalAlignment="Left" Height="23" Margin="147,304,0,-24" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="16" KeyDown="hexcode_KeyDown" ToolTip="Enter in a hex code, and press enter."/>
                    <Label Content="Hex Code:" HorizontalAlignment="Left" Margin="67,304,0,-27" VerticalAlignment="Top" FontSize="16" Background="White" Foreground="White" FontFamily="Segoe UI Light" ToolTip="Enter in a hex code, and press enter." Width="72" Height="26"/>
                    <TextBox x:Name="rgbcode" Grid.ColumnSpan="1" HorizontalAlignment="Left" Height="23" Margin="147,333,0,-53" TextWrapping="Wrap" VerticalAlignment="Top" Width="190" FontSize="16" KeyDown="rgbcode_KeyDown" ToolTip="Enter in an RGB code, and press enter."/>
                    <Label Content="RGB Code:" HorizontalAlignment="Left" Margin="67,333,0,-53" VerticalAlignment="Top" FontSize="16" Background="White" Foreground="White" FontFamily="Segoe UI Light" ToolTip="Enter in an RGB code, and press enter." Height="23"/>
                    <Button x:Name="AddTrit" Content="Add Tritium" HorizontalAlignment="Left" Margin="67,366,0,-94" VerticalAlignment="Top" Width="270" Height="31" FontSize="14" Click="AddTrit_Click"/>
                    <Button x:Name="RemoveTrit" Content="Remove Tritium" HorizontalAlignment="Left" Margin="67,402,0,-130" VerticalAlignment="Top" Width="270" Height="31" FontSize="14" Click="RemoveTrit_Click"/>
                </Grid>
            </TabItem>
            <TabItem x:Name="Misc" Header="MISC" FontSize="16" Margin="4,0,-4,0" IsEnabled="False">
                <Grid x:Name="MiscGrid" Height="303" VerticalAlignment="Top" Margin="0,0,-3,0">
                    <Button x:Name="RemoveWM" Content="Remove Redacted Watermark" Height="31" Margin="5,12,5,260" IsCancel="True" FontSize="14" Click="RemoveWM_Click" />
                    <Label x:Name="Lang" Content="BO2 Language:" HorizontalAlignment="Left" Margin="5,55,0,0" VerticalAlignment="Top" FontSize="17" Width="134" Foreground="Gray"/>
                    <ComboBox x:Name="combo" Background="{x:Null}" HorizontalAlignment="Left" Margin="125,55,0,0" VerticalAlignment="Top" Width="326" BorderBrush="{x:Null}" ItemContainerStyle="{DynamicResource ComboBoxItemStyle1}" SelectionChanged="combo_SelectionChanged" IsEnabled="False">
                        <ComboBoxItem Content="English" Foreground="#FF00A7E6" Background="#FF141414" BorderBrush="#FF00A7E6"></ComboBoxItem>
                        <ComboBoxItem Content="Polish" Foreground="#FF00A7E6" Background="#FF141414" BorderBrush="#FF00A7E6"></ComboBoxItem>
                        <ComboBoxItem Content="Japanese" Foreground="#FF00A7E6" Background="#FF141414" BorderBrush="#FF00A7E6"></ComboBoxItem>

                    </ComboBox>
                </Grid>
            </TabItem>
        </TabControl>
        <Rectangle x:Name="Indicator" Fill="{DynamicResource DefaultColor}" HorizontalAlignment="Left" Height="3" Margin="15,37,0,0" VerticalAlignment="Top" Width="53" RadiusY="1.5" RadiusX="2"/>
        <local:linkButton x:Name="closeButton" Content="✕" Margin="0,-20,-1,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="Black" Height="25" BorderBrush="#FF838383" HorizontalAlignment="Right" Width="24" Click="closeButton_Click"/>
        <local:linkButton x:Name="minButton" Content="—" Margin="0,-20,24,0" VerticalAlignment="Top" Background="{x:Null}" Foreground="Black" Height="25" BorderBrush="#FF707071" HorizontalAlignment="Right" Width="24" Click="minButton_Click"/>
    </Grid>
</Window>
